!!!
%html
  %head
    %title Bookoid
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    %link{:href => "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.8/themes/ui-lightness/jquery-ui.css", :rel => "stylesheet", :type => "text/css"}
    = csrf_meta_tags
  %body
    = render :partial => "shared/login_tab"
    = render :partial => "shared/to_admin" if user_signed_in? && current_user.is_admin
    %br/
    = render :partial => "shared/tab"
    = render :partial => "shared/alerts_notices"
    = yield
